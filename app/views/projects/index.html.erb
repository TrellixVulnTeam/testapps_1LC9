<h1>Tasks</h1>

<ul>
	<% @projects.each do |project| %>
		<li>
			<%= link_to project.title, project_path(project.id) %> (<%= project.tasks.unfinished.count %>/<%= project.tasks.count %>)
		<%= link_to "編集", edit_project_path(project.id) %>
		<%= link_to "削除", project_path(project.id), method: :delete, data: {confirm: "削除してもええ？"} %>
		</li>
	<% end %>

	<%= link_to '新規作成', new_project_path %>
	<%= link_to 'メニューへ', root_path %>
</ul>


