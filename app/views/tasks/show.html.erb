<h1><%= @student_memo.student_name %></h1>

<ul>
	<% @student_memo.tasks.each do |task| %>
		<li><%= task.title %></li>
		<%= link_to "削除", project_task_path(task.project.id, task.id), method: :delete, data: {confirm: "削除してもええ？"} %>
	<% end %>
	<li>
		<%= form_for [@student_memo, @student_memo.tasks.build] do |f| %>
			<%= f.text_field :title %>
			<%= f.submit %>
		<% end %>
	</li>
</ul>
